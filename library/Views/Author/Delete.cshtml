@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete the author "@Model.Name"?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Author")" class="btn btn-secondary">Cancel</a>
</form>

