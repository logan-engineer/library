@model IEnumerable<Author>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Authors List";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Create", "Author")" class="btn btn-primary mb-3">Create New Author</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Author", new { id = author.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Author", new { id = author.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this author?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}
