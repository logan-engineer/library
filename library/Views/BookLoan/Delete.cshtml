@model BookLoan

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Book Loan";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this Book Loan?</h4>
<hr />

<div class="alert alert-warning">
    <strong>Warning!</strong> This action cannot be undone.
</div>

<div>
    <strong>Book:</strong> @Model.Book.Title
</div>
<div>
    <strong>Member:</strong> @Model.Member.Id
</div>
<div>
    <strong>Loan Date:</strong> @Model.LoanDate.ToString("yyyy-MM-dd")
</div>
<div>
    <strong>Return Date:</strong> @(Model.ReturnDate.HasValue ? Model.ReturnDate.Value.ToString("yyyy-MM-dd") : "Not returned yet")
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
