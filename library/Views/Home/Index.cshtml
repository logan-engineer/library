@model IEnumerable<Book>
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- Carousel Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <!-- Carousel Inner -->
    <div class="carousel-inner">
        <!-- First Slide -->
        <div class="carousel-item active">
            <img src="~/image/hero.jpg" class="w-100"  style="height:800px"/>
            <div class="carousel-caption">
                <h1>Welcome to Our Library</h1>
                <p>Your portal to a world of knowledge and adventure</p>
                <a href="#catalog" class="btn btn-header">Explore Our Catalog</a>
            </div>
        </div>
        <!-- Second Slide -->
        <div class="carousel-item" style="background-image: url('library-header2.jpg');">
            <img src="~/image/hero.jpg" class="w-100" style="height:800px" />
            <div class="carousel-caption">
                <h1>Endless Learning</h1>
                <p>Explore new worlds with every book you pick up</p>
                <a href="#catalog" class="btn btn-header">Browse Books</a>
            </div>
        </div>
        <!-- Third Slide -->
        <div class="carousel-item" >
            <img src="~/image/hero.jpg" class="w-100" style="height:800px" />
            <div class="carousel-caption">
                <h1>Join Us Today</h1>
                <p>Become a member and start your learning journey</p>
                <a href="#catalog" class="btn btn-header">Get Started</a>
            </div>
        </div>
    </div>

    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Info Section -->
<div class="container info-section" id="catalog">
    <h2>What We Offer</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/image/book_3145765.png" class="card-img-top w-50" alt="Book Collection" >
                <div class="card-body">
                    <h5 class="card-title">Vast Collection</h5>
                    <p class="card-text">Explore our wide range of books in various genres, from fiction to academic texts.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/image/member-card_7186404.png" class="card-img-top w-50" alt="Membership">
                <div class="card-body">
                    <h5 class="card-title">Simple Membership</h5>
                    <p class="card-text">Join our library easily and gain access to books, digital resources, and more!</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/image/profile_1035002.png" class="card-img-top w-50" alt="Digital Access">
                <div class="card-body">
                    <h5 class="card-title">Online Access</h5>
                    <p class="card-text">Access our digital collection anytime, from anywhere on your device.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <h1 class="text-center">List Books</h1>
    <div class="row pb-3">
        <form method="get" class="form-inline">
            <div class="row">
                <div class="col-4 d-flex justify-content-around">

                    <input type="text" id="search" name="search" class="form-control" placeholder="Search by name or Author or ISBN" value="" />
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
                <div class="col-6 d-flex justify-content-around">


                    <input type="number" id="minPrice" name="minPrice" class="form-control" placeholder="Min Price" value="" />

                    <input type="number" id="maxPrice" name="maxPrice" class="form-control" placeholder="Max Price" value="" />
                </div>
            </div>





        </form>
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@product.Image" class="card-img-top rounded" style="height:400px " />
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center text-truncate">@product.Title</p>
                                    <p class="card-title h5 text-warning text-center">by <b>@product.Author.Name</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center mb-0">List price: <span class="text-decoration-line-through">@product.Price.ToString("C")</span></p>

                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">As low as: <span>@product.LowasPrice.ToString("C")</span></p>

                                </div>
                                <div>
                                    <a asp-action="Details" asp-controller="Home" asp-route-Id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
