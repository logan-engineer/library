@model IEnumerable<Librarian>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Librarian List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New Librarian</a>
</p>

<table id="table" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var librarian in Model)
        {
            <tr>
                <td>@librarian.Id</td>
                <td>@librarian.Name</td>
                <td>@librarian.Contact</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = librarian.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", new { id = librarian.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", new { id = librarian.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}
