@model Member

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Member";
}

<!-- Page Header -->
<div class="container my-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Members List</a>
    </p>
</div>

<!-- Delete Member Confirmation -->
<div class="container">
    <h3>Are you sure you want to delete this member?</h3>

    <div class="row">
        <div class="col-md-6">
            <h4>Member Information</h4>
            <dl class="row">
                <dt class="col-sm-3">Member Name:</dt>
                <dd class="col-sm-9">@Model.MemberName</dd>

                <dt class="col-sm-3">Contact:</dt>
                <dd class="col-sm-9">@Model.Contact</dd>

                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
