@model IEnumerable<Member>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Members";
}

<!-- Page Header -->
<div class="container my-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Member</a>
    </p>
</div>

<!-- Members Table -->
<div class="container">
    <table id="table" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Member Name</th>
                <th scope="col">Contact</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <th scope="row">@member.Id</th>
                    <td>@member.MemberName</td>
                    <td>@member.Contact</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = member.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", new { id = member.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", new { id = member.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}

